<!-- views/products.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
</head>

<body>
    <h1>Product List</h1>
    <ul>
        <% products.forEach(product=> { %>
            <li>
                <strong>
                    <%= product.name %>
                </strong><br>
                Price: <%= product.price %><br>
                    Description: <%= product.description %><br>
                        Category: <%= product.category %><br>
                            Stock: <%= product.stock %>
            </li>
            <% }) %>
    </ul>
</body>

</html>